{
  "id": "latex-workshop-pdftex",
  "version": "1.0.0",
  "name": "LaTeX Workshop extension with pdftex",
  "description": "Latex Workshop extension configured to build with latexmk using pdftex.",
  "options": {
    "srcDir": {
      "type": "string",
      "description": "The directory containing the LaTeX source files. Relative to the container workspace folder.",
      "default": "src",
      "proposals": ["src", "."]
    },
    "outDir": {
      "type": "string",
      "description": "The directory to store the output files. Relative to the container workspace folder.",
      "default": "build",
      "proposals": ["build", "aux"]
    }
  },
  "containerEnv": {
    "LATEX_SRC_DIR": "${containerWorkspaceFolder}/${srcDir}",
    "LATEX_OUT_DIR": "${containerWorkspaceFolder}/${outDir}"
  },
  "postCreateCommand": "mkdir -p ${env:LATEX_SRC_DIR} ${env:LATEX_OUT_DIR} && chmod -R 777 ${env:LATEX_SRC_DIR} ${env:LATEX_OUT_DIR}",
  "customizations": {
    "vscode": {
      "extensions": ["James-Yu.latex-workshop"],
      "settings": {
        // setup
        "files.associations": {
          "*.tex": "latex",
          "*.cls": "latex",
          "*.sty": "latex"
        },
        // building
        "latex-workshop.latex.autoBuild.run": "onFileChange",
        "latex-workshop.latex.search.rootFiles.include": [
          "${env:LATEX_SRC_DIR}/**/*.tex"
        ],
        "latex-workshop.latex.recipe.default": "latexmk",
        "latex-workshop.latex.tools": [
          {
            "name": "latexmk",
            "command": "latexmk",
            "args": [
              "-pdf",
              "-synctex=1",
              "-interaction=nonstopmode",
              "-file-line-error",
              "-shell-escape",
              "-output-directory=${env:LATEX_OUT_DIR}",
              "%DOC%"
            ]
          },
          {
            "name": "bibtex",
            "command": "bibtex",
            "args": ["${env:LATEX_OUT_DIR}/%DOCFILE%"]
          }
        ],
        "latex-workshop.latex.recipes": [
          {
            "name": "latexmk",
            "tools": ["latexmk"]
          }
        ],
        // viewing
        "latex-workshop.view.pdf.viewer": "tab",
        "latex-workshop.latex.outDir": "${env:LATEX_OUT_DIR}",
        // formatting
        "[latex]": {
          "editor.formatOnSave": true,
          "editor.defaultFormatter": "James-Yu.latex-workshop"
        },
        "latex-workshop.formatting.latexindent.path": "latexindent",
        "latex-workshop.formatting.latexindent.args": ["-m", "-g", "/dev/null"]
      }
    }
  }
}
